<h1 style="text-align: center">Task</h1>
<% @tasks.each do |task| %>
<div class="container" style="text-align: center">
<ul class="list-group">
<li class="list-group-item">
    <%= link_to task.title, task_path(task[:id]), :class => "btn btn-outline-primary"%>
    <%= link_to "go edit", edit_task_path(task[:id]),:class => "btn btn-outline-warning" %>
    <%= link_to "Delete",
  task_path(task[:id]),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</li>
</ul>
</div>
<% end %>
    <%= link_to "go create", new_tasks_path, :class => "btn btn-outline-danger" %>
