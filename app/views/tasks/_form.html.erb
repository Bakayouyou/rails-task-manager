<div class="card">
  <div class="card-body">
   <div class="mb-3">
  <%= f.label :title %>
  <%= f.text_field :title %>
   </div>

  <br>
   <div class="mb-3">
  <%= f.label :details %>
  <%= f.text_field :details %>
   </div>

